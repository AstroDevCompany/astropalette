{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AstroPalette",
  "version": "0.1.0",
  "identifier": "com.astropalette.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AstroPalette",
        "width": 800,
        "height": 600,
        "minWidth": 500,
        "minHeight": 250,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true,
        "alwaysOnTop": true,
        "maximizable": false,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32.png",
      "icons/128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
